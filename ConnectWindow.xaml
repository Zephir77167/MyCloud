<Window x:Class="MyCloud.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCloud"
        mc:Ignorable="d"
        Title="Ajout d'un Cloud" Height="161.722" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label Content="Platforme cloud" HorizontalAlignment="Left" Margin="40,30,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cloudType" HorizontalAlignment="Left" Margin="139,29,0,0" VerticalAlignment="Top" Width="128" SelectedIndex="0">
            <ComboBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="Resources/googledrive.png" Margin="0, 0, 6, 0"/>
                    <TextBlock>Google Drive</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="Resources/dropbox.png" Margin="0, 0, 6, 0"/>
                    <TextBlock>DropBox</TextBlock>
                </StackPanel>
            </ComboBoxItem>
        </ComboBox>
        <Button Click="CloudLogin" Content="Connexion" HorizontalAlignment="Left" Height="27" Margin="77,79,0,0" VerticalAlignment="Top" Width="130"/>
    </Grid>
</Window>
